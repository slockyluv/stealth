{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "rootDir": ".",
    "outDir": "dist",

    "sourceMap": true
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts"]
}